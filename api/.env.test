# Test environment configuration

# Application
APP_ENV=test
APP_SECRET=test-secret-key-for-testing

# Database (test database)
DATABASE_URL="postgresql://test:test@postgres:5432/chatrealtime_test?serverVersion=15&charset=utf8"

# JWT Configuration (use same keys as dev for testing)
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=change-me-to-random-secret
JWT_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=2592000

# Google OAuth (Test credentials)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost/api/v1/auth/google/callback

# SSO Configuration
SSO_ENABLED=true

# Frontend URL for testing
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ALLOW_ORIGIN="^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$"

# JWT Device Fingerprinting (disabled for tests)
JWT_DEVICE_FINGERPRINT_MODE=disabled
JWT_DEVICE_FINGERPRINT_BYPASS=curl,postman,insomnia,httpie

# Redis (for tests)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
